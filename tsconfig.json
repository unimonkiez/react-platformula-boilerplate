{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ],
    "target": "es6",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ]
}